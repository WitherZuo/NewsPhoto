{
    "name": "NewsPhoto",
    "image": "docker.io/library/python:3.12-bookworm",
    "features": {
        "ghcr.io/rocker-org/devcontainer-features/pandoc:1": {}
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-python.vscode-pylance",
                "ms-python.debugpy",
                "charliermarsh.ruff"
            ],
            "settings": {
                "python.defaultInterpreterPath": "python"
            }
        }
    },
    "postCreateCommand": "pip install --no-cache-dir -r requirements.txt && playwright install chromium --with-deps"
}