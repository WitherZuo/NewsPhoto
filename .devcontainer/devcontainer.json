{
    "name": "NewsPhoto",
    "build": {
        "dockerfile": "Dockerfile",
        "context": "."
    },
    "features": {
        "ghcr.io/rocker-org/devcontainer-features/pandoc:1": {
            "version": "latest"
        },
        "ghcr.io/devcontainers/features/common-utils:2": {
            "installZsh": true,
            "configureZshAsDefaultShell": true,
            "installOhMyZsh": true,
            "installOhMyZshConfig": true
        }
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-python.vscode-pylance",
                "ms-python.debugpy",
                "charliermarsh.ruff"
            ],
            "settings": {
                "python.defaultInterpreterPath": "python"
            }
        }
    },
    "postCreateCommand": "pip install -r requirements.txt && playwright install chromium --with-deps --no-shell",
    "containerUser": "dev",
    "remoteUser": "dev"
}
